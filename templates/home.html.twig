{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-4">
        {#    перевод хотел сделать, потом вспомнил про SPA    #}
        <h1 class="mb-3 text-center">{{ 'home.songs'|trans }}</h1>

        <div class="container mt-4">
            <form class="row gy-3 gx-4 align-items-center"
                  data-controller="filters"
                  data-action="change->filters#update">

                <!-- Language -->
                <div class="col-12 col-md-4">
                    <label for="language" class="form-label fw-semibold">{{ 'home.language'|trans }}</label>
                    <select id="language" class="form-select shadow-sm" data-filters-target="language">
                        <option value="en">English</option>
                        <option value="de">German</option>
                    </select>
                </div>

                <!-- Seed -->
                <div class="col-12 col-md-4" data-controller="seed">
                    <label for="seed" class="form-label fw-semibold">Seed</label>
                    <div class="input-group">
                        <input id="seed" type="text" class="form-control shadow-sm"
                               placeholder="Seed"
                               data-filters-target="seed"
                               data-seed-target="input" value="0"/>
                        <button type="button" class="btn btn-outline-secondary"
                                data-action="click->seed#generate">
                            Generate
                        </button>
                    </div>
                </div>

                <!-- Likes per song -->
                <div class="col-12 col-md-4">
                    <label for="likes" class="form-label fw-semibold">Likes per song</label>
                    <div class="d-flex align-items-center">
                        <input id="likes" type="range" class="form-range flex-grow-1"
                               data-filters-target="likes"
                               value="0" step="0.1" min="0" max="10.0"/>
                        <span id="likes-value" class="badge bg-primary ms-3">0</span>
                    </div>
                </div>
            </form>
        </div>


        <div data-controller="view-switch" class="d-flex justify-content-center mb-3 mt-3">
            <div class="btn-group">
                <button type="button"
                        class="btn btn-outline-primary active"
                        data-action="view-switch#switch"
                        data-view="table">
                    Table
                </button>
                <button type="button"
                        class="btn btn-outline-primary"
                        data-action="view-switch#switch"
                        data-view="gallery">
                    Gallery
                </button>
            </div>
        </div>

        <turbo-frame class="turbo-frame" id="data-frame" src="{{ path('home_content', app.request.query.all) }}">

            <div class="spinner-border text-success"
                 style="width: 5rem; height: 5rem;" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>

        </turbo-frame>
    </div>
{% endblock %}
