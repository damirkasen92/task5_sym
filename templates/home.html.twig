{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-4">
        <h1 class="mb-3">{{ 'home.songs'|trans }}</h1>

        <div class="container mt-3">
            <div class="d-flex gap-3 align-items-center"
                 data-controller="filters"
                 data-action="change->filters#update"
            >

                <select class="form-select" data-filters-target="language">
                    <option value="en">English</option>
                    <option value="de">German</option>
                </select>

                <input type="number" class="form-control" placeholder="Seed"
                       data-filters-target="seed" value="0"/>

                <input type="range" class="form-control" placeholder="Likes per song"
                       data-filters-target="likes" value="0" step="0.5" min="0" max="10.0"/>
            </div>
        </div>

        {% include './includes/_view_buttons.html.twig' %}

        <turbo-frame id="data-frame" src="{{ path('home_content') }}">
            Загрузка...
        </turbo-frame>
    </div>
{% endblock %}
