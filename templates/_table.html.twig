<turbo-frame id="data-frame">

    <div class="table-responsive" data-controller="animate">
        <table class="table table-hover align-middle">
            <thead class="table-light">
            <tr>
                <th>Title</th>
                <th>Artist</th>
                <th>Album</th>
                <th>Genre</th>
                <th>Likes</th>
            </tr>
            </thead>
            <tbody>
            {% for song in songs %}
                <tr data-bs-toggle="collapse" data-bs-target="#details-{{ loop.index }}" aria-expanded="false"
                    aria-controls="details-{{ loop.index }}" class="pointer">
                    <td>{{ song.title }}</td>
                    <td>{{ song.artist }}</td>
                    <td>{{ song.albumTitle }}</td>
                    <td>{{ song.genre }}</td>
                    <td>{{ song.likes }}</td>
                </tr>
                <tr>
                    <td colspan="5" class="p-0">
                        <div class="collapse bg-light" id="details-{{ loop.index }}">
                            <div class="p-3 bg-light">
                                <div class="d-flex gap-3 align-items-start">
                                    {# Обложка альбома #}
                                    <div class="card" style="width: 150px;">
                                        <img src="{{ song.cover }}" class="card-img-top" alt="{{ song.title }}">
                                        <div class="card-body p-2">
                                            <h6 class="card-title mb-1">{{ song.title }}</h6>
                                            <p class="card-subtitle text-muted">{{ song.artist }}</p>
                                        </div>
                                    </div>

                                    {# Детали #}
                                    <div class="flex-grow-1">
                                        <audio></audio>
                                        <button type="button"
                                                class="btn btn-sm btn-primary mb-2 btn-animate"
                                                data-controller="play-song"
                                                data-action="click->play-song#click"
                                                data-record-idx="{{ song.index }}">
                                            ▶️ Play Preview
                                        </button>

                                        <p class="mb-0">
                                            {{ song.reviewText|default('This is a randomly generated review text that adds flavor to the record...') }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="pagination mt-3">
            {% for i in 1..5 %}
                <a href="{{ path('home_content', app.request.query.all | merge({'page': i})) }}"
                   class="btn btn-sm {% if i == page %}btn-primary{% else %}btn-outline-primary{% endif %} mx-2"
                   data-turbo-frame="data-frame">
                    {{ i }}
                </a>
            {% endfor %}
        </div>
    </div>

</turbo-frame>
